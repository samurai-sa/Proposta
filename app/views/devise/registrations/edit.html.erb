<% provide(:title, "プロフィール編集 | ") %>
<div class="form-wrapper">
  <h2>プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field form-item">
      <%= f.label :名前 %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>
    
    <div class="field form-item">
      <%= f.label :ユーザータイプ %><br />
      <%= f.select :usertype, [["法人", "company"], ["一般", "General"]], autofocus: true %>
    </div>
    
    <div class="field form-item">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="actions button-panel">
      <%= f.submit "更新", class: "button" %>
    </div>
  <% end %>
  
  <div class="user-delete text-center">
    <h3>アカウントを削除する</h3>
    <p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p><br />
    <%= link_to "戻る", :back %>
  </div>
  

</div>