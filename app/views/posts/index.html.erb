<div class="container text-center">
  <p id="notice"><%= notice %></p>
  
  <div class="searchbox">
    <%= search_form_for @q do |f| %>
      <%= f.search_field :title_or_content_cont ,placeholder: "search", class: 'search-form' %>
    	<%= f.submit "検索", class: 'btn-flat-border' %>
    <% end %>
  </div>
  <h1>投稿一覧</h1>
  <div class="post-index">
    <% @posts.each do |post| %>
      <h4><strong><%= link_to post.title, post %></strong></h4>
      <div class="border-bottom"></div>
    <% end %>
  </div>
  <%= paginate @posts %> 
  
</div>
